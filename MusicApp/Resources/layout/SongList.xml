<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="78dp"
  android:background="?android:colorBackground" >
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:id="@+id/leftButtons"
    android:paddingLeft="8dp"
    android:layout_alignParentLeft="true">
    <ImageView
      android:id="@+id/reorder"
      android:layout_width="30dp"
      android:layout_height="match_parent"
      android:padding="5dp"
      android:clickable="true"
      android:visibility="gone"
      android:src="@drawable/Reorder" />
    <ImageView
      android:id="@+id/albumArt"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:padding="5dp"
      android:src="@drawable/MusicIcon" />
  </LinearLayout>
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="78dp"
    android:gravity="center_vertical"
    android:paddingLeft="10dp"
    android:id="@+id/textLayout"
    android:layout_toRightOf="@id/leftButtons"
    android:layout_toLeftOf="@+id/rightButtons" >
    <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="14dip"
      android:textColor="#000"
      android:ellipsize="end"
      android:maxLines="1"
      android:textStyle="bold" />
    <TextView
      android:id="@+id/artist"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="12dip"
      android:maxLines="1"
      android:textColor="#000" />
    <TextView
      android:id="@+id/isLive"
      android:layout_width="wrap_content"
      android:layout_height="fill_parent"
      android:visibility="gone"
      android:text="LIVE"
      android:textSize="14dip"
      android:textStyle="bold"
      android:layout_marginLeft="10dp"
      android:paddingBottom="7dp"
      android:gravity="bottom"
      android:textColor="#ff0000" />
  </LinearLayout>
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Playing"
    android:textSize="11dp"
    android:id="@+id/status"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    android:textColor="#f4511e"
    android:visibility="gone"
    android:paddingRight="55dp"
    android:paddingBottom="15dp" />
  <LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:id="@+id/rightButtons">
    <ImageView
      android:id="@+id/youtubeIcon"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:padding="5dp"
      android:background="@null"
      android:src="@drawable/PublicIcon"
      android:layout_gravity="center_vertical"
      android:visibility="gone" />
    <ImageView
      android:id="@+id/moreButton"
      android:layout_width="30dp"
      android:layout_height="70dp"
      android:paddingLeft="5dp"
      android:paddingRight="5dp"
      android:paddingTop="25dp"
      android:paddingBottom="25dp"
      android:clickable="true"
      android:background="@null"
      android:src="@drawable/More"
      android:gravity="center_vertical" />
  </LinearLayout>
</RelativeLayout >